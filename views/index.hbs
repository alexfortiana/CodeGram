
{{#each publications}}
    <div class="text-card">
        <div class="flex-row flex-fill-space">
            <img class="rounded--img" src={{#if this.owner.profile_pic}}{{this.owner.profile_pic}}{{else}}"./images/image.jpg"{{/if}} alt="profile-pic" width="40px"/>
            <code class="username-size">{{this.owner.username}}</code>
        </div>
        <div >

            <pre class="card-body"><code class="{{language this.language}}">{{this.code}}</code></pre>
        </div>
        <div class="flex-row bottom-card">
            <div class="card-details flex-row ">
                <div class="like-details">
                    <form method="post" action="/like/{{this._id}}">
                        <code class="code-size">{{count this.likes}}</code>
                        <input type="image" src="./images/heart-red.png" width="20px"
                               alt="heart-red" name="like" style="display: {{userLiked this.likes true}}"/>
                        <input type="image" src="./images/heart-empty.png" width="20px"
                               alt="heart-red" name="like" style="display: {{userLiked this.likes false}}"/>
                    </form>
                </div>
                <div class="messages-details">
                    <code class="code-size">{{count this.comments}}</code>
                    <img src="./images/comment.png" alt="comment" width="20px"/>
                </div>
            </div>
            <div>
                <a href="/details/{{this._id}}">More Details</a>
            </div>
        </div>
    </div>

{{/each}}



{{#if errorMessage}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Holy guacamole!</strong> Your search didn't report any result.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<div class="flex-row flex-wrap">
{{#each publications}}
    <div class="text-card box-border padding-sm">
        <div class="flex-row flex-fill-space">
            <img class="rounded--img" src={{#if this.owner.profile_pic}}{{this.owner.profile_pic}}{{else}}"./images/image.jpg"{{/if}} alt="profile-pic" width="40px" height="40px"/>
            <code class="username-size remove-style"><a href="/profile/{{this.owner._id}}">@{{this.owner.username}}</a></code>
            <a class="text-decoration-none text-width minus-margin margin-left" href="/details/{{this._id}}" >{{this.description}}</a>
        </div>
        <div >
            <pre class="card-body"><code class="{{language this.language}}">{{this.code}}</code></pre>
        </div>
        <div class="flex-row bottom-card">
            <div class="card-details flex-row ">
                <div class="like-details">
                    <form method="post" action="/like/{{this._id}}">
                        <code class="code-size">{{count this.likes}}</code>
                        <input type="image" src="./images/heart-red.png" width="20px"
                               alt="heart-red" name="like" style="display: {{userLiked this.likes true}}"/>
                        <input type="image" src="./images/heart-empty.png" width="20px"
                               alt="heart-red" name="like" style="display: {{userLiked this.likes false}}"/>
                    </form>
                </div>
                <div class="messages-details">
                    <code class="code-size">{{count this.comments}}</code>
                    <a href="/details/{{this._id}}"><img src="./images/comment.png" alt="comment" width="20px"/></a>
                </div>
            </div>
            <div>
                <a href="/details/{{this._id}}"><img src="/images/points.png" alt="" width="25px"></a>
            </div>
        </div>
    </div>

{{/each}}
</div>


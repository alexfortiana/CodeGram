<div class="flex-row ">  
  <div class="circular--landscape circular--landscape-size margin-top">
    <img
      
      src="{{myProfile.profile_pic}}"
      width="150"
      alt="profile's picture"
    />
  </div>
  <div class="margin-top">
    <br><br><br><br><br>
    <form action="/profile/edit">
    <button class="button-14" role="button">Edit profile</button>
  </form>
  </div>
  
<div class="d-flex flex-column bd-highlight mb-3 align-items-center profile-center margin-top">
  <br><br>
  <h4>{{myProfile.username}}</h4>
  <span>{{myProfile.bio}}</span>
</div>

</div>

<br>
<span>{{count myProfile.followers}} followers |  {{count myProfile.followings}} followings</span>
<br><br><br>
<hr>


  

    <h1 class="text-center" >My Publications</h1>
      
      <div class="flex-row flex-wrap">
{{#each myPublications}}
 <a class="text-decoration-none" href="/details/{{this._id}}">
    <div class="text-card2">
        <div >

            <pre class="card-body2"><code class="{{language this.language}}">{{this.code}}</code></pre>
        </div>
        <div class="flex-row bottom-card">
            <div class="card-details flex-row ">
                <a class="text-decoration-none" href="/details/{{this._id}}">{{this.description}}</a>
            </div>
        </div>
    </div>
    </a>

{{/each}}
</div>
    
  



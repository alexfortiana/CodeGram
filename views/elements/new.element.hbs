<div class="use-full-size flex-column new-element-position">
    <div class="margin-top" >
    <h1>New Publication</h1>
    </div>
    <div class="box-border padding-m">
    <form  method="POST" action="/new">
        <div class="flex-row new-element-position use-full-size">
            <div>
                <label for="newCodeElement">
                    <h4>Write here your code</h4>
                    <textarea name="newCodeElement" class="text-editing text-edit-size" >Write your code here</textarea>
                </label>
            </div>
            <div class="margin-left">
                <h4>Description:</h4>
                <label for="newDescriptionElement">
                    <textarea name="newDescriptionElement" class="text-editing" >Add a simple description</textarea>
                </label>
                <br>
                <h4>Select language</h4>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="languageSelector" id="flexRadioDefault1" value="html">
                    <label class="form-check-label" for="flexRadioDefault1" name="htmlSelector">
                        HTML
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="languageSelector" id="flexRadioDefault2" value="css">
                    <label class="form-check-label" for="flexRadioDefault2" name="cssSelector">
                        CSS
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="languageSelector" id="flexRadioDefault3" value="js">
                    <label class="form-check-label" for="flexRadioDefault3" name="jsSelector">
                        JavaScript
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="languageSelector" id="flexRadioDefault4" value="py">
                    <label class="form-check-label" for="flexRadioDefault4" name="pythonSelector">
                        Python
                    </label>
                </div>
                <div class="flex-row flex-centered-row">
                    <!-- Rounded switch -->
                    <div>
                        <label class="switch">
                            <input type="checkbox" id="toggleButton" name="privateButton">
                            <span class="slider round text-button"></span>
                        </label>
                    </div>
                    <div class="toggle-button-text button-private">
                        <h5>Post as Private</h5>
                    </div>
                </div>
                <button class="button-14" action="submit">Publish</button>
            </div>
        </div>
    </form>
    </div>
    {{#if error}}
        <div>{{error}}</div>
    {{/if}}

</div>




